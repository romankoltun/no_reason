@model SimpleImageGalerry.Models.GalleryDetailModel

<div class="container body-content" >
    <div class="row image-detail-conteiner">
        <div class="image-detail">
            <img src="@Model.Url" alt="@Model.Title" />
        </div>
    </div>
    <div class="row image-detail-meta">
        <span>Title: @Model.Title </span>
        <span>Uploaded: @Model.CreateOn</span>
    </div>
    <div class="row controls">
        <a class="btn btn-primary" asp-controller="Gallery" asp-action="Index">
            Back to Gallery
        </a>
        <a  class="btn btn-primary" asp-controller="Gallery" asp-action="Delete" asp-route-id="@Model.Id">
           Delete</a>
    </div>
 
</div>